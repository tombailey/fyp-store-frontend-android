<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_app_view_image_view_icon"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/list_app_view_text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="18sp"
            android:ellipsize="end" />

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/list_app_view_simple_rating_bar_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:srb_numberOfStars="5"
            app:srb_starSize="18dp"
            app:srb_borderColor="#BBBBBB"
            app:srb_fillColor="#BBBBBB"
            app:srb_isIndicator="true"/>

    </LinearLayout>

</android.support.v7.widget.CardView>