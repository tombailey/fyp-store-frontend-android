<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/create_review_dialog_star_rating"
        android:textSize="16sp"/>

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/create_review_dialog_rating_bar_stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:srb_rating="3"
        app:srb_numberOfStars="5"
        app:srb_minNumberOfStars="1"
        app:srb_starSize="35dp"
        app:srb_borderColor="#FFD700"
        app:srb_fillColor="#FFD700"
        app:srb_stepSize="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/create_review_dialog_description"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/create_review_dialog_edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="textCapSentences" />

</LinearLayout>